   "source": [
    "**挑战 7.1**：综合分析报告"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ===== 参考答案 =====\n",
    "\n",
    "# 创建3x3子图布局\n",
    "fig, axes = plt.subplots(3, 3, figsize=(15, 12))\n",
    "axes = axes.flatten()\n",
    "\n",
    # 特征列表
    "features = ['MedInc', 'HouseAge', 'AveRooms', 'AveBedrms', 'Population', \n",
    "           'AveOccup', 'Latitude', 'Longitude', 'MedHouseVal']\n",
    "\n",
    "# 遍历所有特征\n",
    "for i, feature in enumerate(features):\n",
    "    # 计算均值和标准差\n",
    "    mean_val = df[feature].mean()\n",
    "    std_val = df[feature].std()\n",
    "    \n",
    "    # 判断异常值\n",
    "    threshold_low = mean_val - 3 * std_val\n",
    "    threshold_high = mean_val + 3 * std_val\n",
    "    \n",
    "    # 创建直方图\n",
    "    values = df[feature].values\n",
    "    normal_values = values[(values >= threshold_low) & (values <= threshold_high)]\n",
    "    outlier_values = values[(values < threshold_low) | (values > threshold_high)]\n",
    "    \n",
    "    axes[i].hist(normal_values, bins=30, color='blue', alpha=0.7, label='正常值')\n",
    "    if len(outlier_values) > 0:\n",
    "        axes[i].hist(outlier_values, bins=30, color='red', alpha=0.7, label='异常值')\n",
    "    \n",
    "    # 添加统计信息\n",
    "    stats_text = f'均值: {mean_val:.2f}\\n标准差: {std_val:.2f}'\n",
    "    axes[i].text(0.05, 0.95, stats_text, transform=axes[i].transAxes, \n",
    "                 verticalalignment='top', bbox=dict(boxstyle='round', facecolor='white', alpha=0.8))\n",
    "    \n",
    "    axes[i].set_title(f'{feature} 分布', fontsize=12)\n",
    "    axes[i].set_xlabel('值', fontsize=10)\n",
    "    axes[i].set_ylabel('频数', fontsize=10)\n",
    "    axes[i].grid(True, linestyle=':', alpha=0.5)\n",
    "    \n",
    "    if i == 0:  # 只在第一个图显示图例\n",
    "        axes[i].legend()\n",
    "\n",
    "plt.suptitle('California Housing 数据集特征分布分析', fontsize=16)\n",
    "plt.tight_layout()\n",
    "plt.show()"
   ]
  },
