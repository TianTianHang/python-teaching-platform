   "metadata": {},
   "outputs": [],
   "source": [
    "# ===== 参考答案 =====\n",
    "\n",
    # 创建2D histogram
    "plt.figure(figsize=(12, 8))\n",
    "plt.hist2d(df['Longitude'], df['Latitude'], bins=50, cmap='viridis', \n",
    "           weights=df['MedHouseVal'], cmin=0.1)\n",
    "\n",
    "# 添加颜色条\n",
    "cbar = plt.colorbar()\n",
    "cbar.set_label('平均房价（10万美元）', fontsize=12)\n",
    "\n",
    # 添加城市标注
    "la_lat, la_lon = 34.05, -118.25\n",
    "sf_lat, sf_lon = 37.7779, -122.4194\n",
    "sd_lat, sd_lon = 32.7157, -117.1611\n",
    "\n",
    "plt.scatter([la_lon, sf_lon, sd_lon], [la_lat, sf_lat, sd_lat], \n",
