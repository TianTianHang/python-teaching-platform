  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ===== 参考答案 =====\n",
    "\n",
    "# 1. 按房屋年龄分组计算平均房价\n",
    "age_price = df.groupby('HouseAge')['MedHouseVal'].mean()\n",
    "\n",
    "# 2. 创建折线图\n",
    "plt.figure(figsize=(12, 6))\n",
    "plt.plot(age_price.index, age_price.values, 'b-', linewidth=2, marker='o', markersize=4)\n",
    "\n",
    "# 3. 标记最高房价点\n",
    "max_price = age_price.max()\n",
    "max_age = age_price.idxmax()\n",
    "plt.scatter([max_age], [max_price], color='red', s=100, zorder=5)\n",
    "\n",
    "# 添加注释\n",
    "plt.annotate(f'最高均价:\\n${max_price:.1f}万\\n({max_age}年)',\n",
    "            xy=(max_age, max_price),\n",
    "            xytext=(max_age + 5, max_price + 0.5),\n",
    "            arrowprops=dict(arrowstyle='->', color='red'),\n",
    "            fontsize=10,\n",
    "            bbox=dict(boxstyle='round,pad=0.5', facecolor='yellow', alpha=0.7))\n",
    "\n",
    "plt.xlabel('房屋年龄（年）', fontsize=12)\n",
    "plt.ylabel('平均房价（10万美元）', fontsize=12)\n",
    "plt.title('房屋年龄与房价关系', fontsize=14)\n",
    "plt.grid(True, linestyle=':', alpha=0.6)\n",
    "plt.show()"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "**练习 6.2**：创建堆叠柱状图"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# ===== 参考答案 =====\n",
    "\n",
    "# 1. 将房屋年龄分组\n",
    "age_groups = ['新建(0-15年)', '中等(16-30年)', '老旧(30+年)']\n",
    "df['AgeGroup'] = pd.cut(df['HouseAge'], bins=[0, 15, 30, float('inf')], labels=age_groups)\n",
    "\n",
    "# 2. 将收入分为3组\n",
    "income_groups = ['低', '中', '高']\n",
    "df['IncomeLevel'] = pd.qcut(df['MedInc'], 3, labels=income_groups)\n",
    "\n",
    "# 3. 计算交叉统计\n",
    "cross_tab = pd.crosstab(df['AgeGroup'], df['IncomeLevel'])\n",
    "\n",
    "# 4. 创建堆叠柱状图\n",
    "plt.figure(figsize=(10, 6))\n",
    "\n",
    "# 绘制低收入组\n",
    "plt.bar(cross_tab.index, cross_tab['低'], label='低', color='lightblue')\n",
    "\n",
    "# 绘制中收入组（堆叠在低上）\n",
    "plt.bar(cross_tab.index, cross_tab['中'], bottom=cross_tab['低'], label='中', color='lightgreen')\n",
    "\n",
    "# 绘制高收入组（堆叠在低+中上）\n",
    "plt.bar(cross_tab.index, cross_tab['高'], \n",
    "        bottom=cross_tab['低'] + cross_tab['中'], \n",
    "        label='高', color='lightcoral')\n",
    "\n",
    "plt.xlabel('房屋年龄组', fontsize=12)\n",
    "plt.ylabel('房屋数量', fontsize=12)\n",
    "plt.title('不同年龄组的收入分布', fontsize=14)\n",
    "plt.legend(title='收入组')\n",
    "plt.grid(axis='y', linestyle=':', alpha=0.5)\n",
    "plt.show()"
   ]
  },
